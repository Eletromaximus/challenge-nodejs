// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Lauche {
  id        String  @id
  article   Article @relation(fields: [laucheId], references: [id])
  laucheId  String
  provider  String
}

model Event {
  id        String  @id
  article   Article @relation(fields: [articleId], references: [id])
  articleId String
  provider  String
}

model Article {
    id          String   @id() @unique
    featured    Boolean  @default(false)
    title       String
    url         String
    imageUrl    String
    newsSite    String
    summary     String
    publishedAt String
    events      Event[]
    launches    Lauche[] 

    @@map("articles")
}